#include<stdio.h>

int main(void){
	int a, b, sum, res;
	
	printf("indica el valor del primer numero: \n");
	scanf("%d", &a);
	printf("indica el valor del segundo nuemro:  \n");
	scanf("%d", &b);
	sum=a+b;
	printf("la suma de los dos numeros es: %d   \n", sum);
	res=a-b;
	printf("la resta de los dos numeros es: %d   \n", res);
	return 0;
	
	
	
}
